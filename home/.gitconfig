[user]
	name = Jason Marcell
	email = jmarcell@twilio.com
[github]
	user = jmarcell
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	afrag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
    diff-inline = diff --color-words="[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+"
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    up = pull --rebase
	blame-histogram = "!f() { git ls-tree -r -z --name-only HEAD -- $1 | xargs -0 -n1 git blame --line-porcelain HEAD |grep	 \"^author \"|sort|uniq -c|sort -nr; }; f"
[core]
    excludesfile = ~/.gitignore_global
[credential]
	helper = osxkeychain
[push]
	default = upstream
[branch]
	autosetuprebase = always
[merge]
	tool = opendiff
[mergetool]
	keepBackup = false
[rerere]
    enabled = true
[git-up "fetch"]
	prune = true
[git-up]
	post-hook = "git checkout develop 2>&1 >/dev/null; git branch --merged | grep -v '*' | xargs -n 1 git branch -d; git clean -df"
