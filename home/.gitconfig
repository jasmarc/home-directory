[mergetool "[tool]"]
	cmd = /usr/bin/opendiff
[merge]
	tool = Kaleidoscope
[user]
	name = Jason Marcell
	email = jasonmarcell@gmail.com
[github]
	user = jasmarc
[color]
	ui = auto
[color "branch"]
       current = yellow reverse
       local = yellow
       remote = green
[color "diff"]
       meta = yellow bold
       afrag = magenta bold
       old = red bold
       new = green bold
[color "status"]
       added = yellow
       changed = green
       untracked = cyan
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files
[diff]
	external = /Users/jasonmarcell/git-diff-cmd.sh
	tool = Kaleidoscope
[core]
	excludesfile = /Users/jasonmarcell/.gitignore_global
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
[mergetool]
	prompt = false
[credential]
	helper = osxkeychain
